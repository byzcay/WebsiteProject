@page "{searchString?}"
@model RecipeApp.Pages.Recipe.RecipePhotoModel

@{
    ViewData["Title"] = "Create";
    ViewData["RecipeID"] = "";
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="photo-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                Current recipe photo <br>
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.Picture)" width="80" height="80" />
            </div>
           @* <div class="form-group">
                <label asp-for="FileUpload.RecipePhoto"></label>
                <input asp-for="FileUpload.RecipePhoto" type="file" class="form-control"><br>
            </div>*@
            <button id="change-picture-button" type="submit" asp-page-handler="Picture" class="w-100 btn btn-lg btn-primary">Change Recipe photo</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
