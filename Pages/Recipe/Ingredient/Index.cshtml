@page
@model RecipeApp.Pages.Recipe.Ingredient.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-page="./Create" asp-route-id=@ViewData["id"]>Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].Calories)
            </th>
            <th>
                Settings
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].RecipeId)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.Ingredient) {
            @if (item.RecipeId == Model.Recipe.Id)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)  @Html.DisplayFor(modelItem => item.Quantity) / @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Calories)
                    </td>
                   @* <td>
                        <div>
                            @Html.DisplayFor(modelItem => item.RecipeId)
                        </div>
                    </td>*@
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        
}
    </tbody>
</table>
