@page
@model RecipeApp.Pages.Recipe.Ingredient.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<link href="~/css/tümeditler.css" rel="stylesheet" />
<h1>Details</h1>


    <h4>Ingredient</h4>

    <div id="myDIV" class="row">
        <div class="col-md-4">
            <section class="login">
                <div class="login_box">
                    <div class="left">
                        <div class="top_link"></div>
                        <div class="contact">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Name
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Ingredient.Name)      @Html.DisplayFor(model => model.Ingredient.Quantity) / @Html.DisplayFor(model => model.Ingredient.Unit)
                                </dd>
                                <dt class="col-sm-2">
                                    Calories
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Ingredient.Calories)
                                </dd>
                            </dl>
                            <div>
                                <a asp-page="./Edit" asp-route-id="@Model.Ingredient?.Id">Edit</a> |
                                <a asp-page="./Index">Back to List</a>
                            </div>

                        </div>
                    </div>

                <div class="right">
                    <img src="~/images/logo.jpg" />
                    </div>
                </div>
            </section>
        </div>

    </div>

